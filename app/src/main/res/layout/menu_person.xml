<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu_person"
    android:background="@color/text_white"
    android:clickable="true">

    <com.example.wsh666.materialtest1.Util.Title
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.example.wsh666.materialtest1.Util.Title>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/header_image"
                android:layout_width="1000dp"
                android:layout_height="120dp"
                android:src="@drawable/header_image"
                android:layout_margin="10dp"
                android:clickable="true"/>


            <TextView
                android:id="@+id/e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_image"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="昵 称 :"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/header_image"
                android:layout_toEndOf="@id/e1"
                android:layout_alignBottom="@id/e1"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/e1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="性别 :"
                android:textSize="20dp"/>

            <EditText

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/e1"
                android:layout_toEndOf="@id/e2"
                android:layout_alignBottom="@id/e2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/e3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/e2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="生日 :"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/e2"
                android:layout_toEndOf="@id/e3"
                android:layout_alignBottom="@id/e3"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/e4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/e3"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="标签 :"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/e3"
                android:layout_toEndOf="@id/e4"
                android:layout_alignBottom="@id/e4"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/person_button"
        />

</LinearLayout>